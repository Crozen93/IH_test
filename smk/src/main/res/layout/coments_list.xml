<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1">

    <TextView
        android:id="@+id/comentsListId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:textSize="36sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />
    <!--    -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text:"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_weight="0.11"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/comentsListId"
        android:layout_toEndOf="@+id/comentsListId"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/comentsListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@+id/comentsListId"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:layout_above="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate:"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_weight="0.11"
        android:gravity="center"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/comentsListRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_weight="0.21"
        android:gravity="center"
        android:layout_below="@+id/comentsListText"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="5dp" />

</RelativeLayout>